hidden_words = ['bulbasaur', 'charizard', 'mewtwo', 'pikachu', 'umbreon',
                'squirtle', 'raikou', 'lugia', 'ivysaur', 'flareon',
                'charmander', 'entie', 'eevee', 'jolteon', 'vaporeon',
                'hooh', 'absol', 'espeon']

grid = ['aoesmentieauup',
        'ubbuqvaporeonc',
        'uhsllgaipepeoh',
        'lvcoreihafawoa',
        'njpalusreatear',
        'ioofkbaptwtesm',
        'vaellizselrvaa',
        'yanrtapmaoeetn',
        'seljbercsbneud',
        'adohhmoeteltce',
        'ueeoesunotrurr',
        'rtouokiarninbl',
        'hhcharizardsoi',
        'hoetovoeinchet']


def check_grid(grid):
    sousliste = []
    for word in grid:
        sousliste.append([word])


# lecture à l'envers les lignes et suppr
def check_line(word, sousliste):
    for ligne in sousliste:
        for mot in word:
            if mot in ligne or mot in ligne[::-1]:
                word.remove(mot)

# lecture vertical
    listevide = []
    for y in range(len(sousliste)):
        listevide_deux = []
        for x in range(len(sousliste)):
            listevide_deux.append(sousliste[x][y])
        var = "".join(listevide_deux)
        listevide.append(var)

# lecture vertical à l'envers et suppr
    for ligne in listevide:
        for lettre in word:
            if lettre in ligne or lettre in ligne[::-1]:
                word.remove(lettre)



print(check_line(hidden_words, grid))
